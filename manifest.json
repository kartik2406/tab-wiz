{
    "manifest_version": 2,

    "name": "First Plugin",
    "description": "This is a test extension",
    "version": "1.0",

    "browser_action": {
        "default_icon": "./icons/tab_wiz_48.png"
    },
    "background": {
        "scripts": ["./js/background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "activeTab",
        "management"
    ],
    "content_security_policy": "script-src 'self' https://unpkg.com; object-src 'self'"
}